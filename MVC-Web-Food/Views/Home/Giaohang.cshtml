<body>
    <div class="ShipInfo">
        <div class="Item">
            <h4>Thông Tin Người Nhận:</h4>
            <hr />
            <p>Tên Đầy Đủ:</p>
            <input type="text" placeholder="Nhập Tên Đầy Đủ" />
            <p>Số Điện Thoại:</p>
            <input type="text" placeholder="Nhập Số Điện Thoại" />
        </div>
        <div class="Item">
            <h4>Địa Chỉ Nhận Hàng:</h4>
            <hr />
            <p>Số nhà/hẻm, tên đường:</p>
            <input type="text" placeholder="Nhập Số nhà/hẻm, tên đường" />
            <p>Phường/Xã:</p>
            <input type="text" placeholder="Nhập Phường/Xã" />
            <p>Quận/Huyện:</p>
            <input type="text" placeholder="Nhập Quận/Huyện" />
            <p>Tỉnh/Thành Phố:</p>
            <input type="text" placeholder="Nhập Tỉnh/Thành Phố" />
            <hr>
            <div class="button-choice-container">
                <h4 class="text">Nơi Giao Hàng</h4>
                <input type="radio" id="choice1" name="button-choice" value="option1">
                <label class="choice1" for="choice1"><i class="fa-solid fa-building"></i></label>

                <input type="radio" id="choice2" name="button-choice" value="option2">
                <label class="choice2" for="choice2"><i class="fa-solid fa-house"></i></label>
            </div>
            <div class="Save">
                <button>Save</button>
            </div>
        </div>
        <div class="Paid">
            <h4>Phương thức thanh toán</h4>
            <hr />
            <div class="radioPaid">
                <input type="radio" id="paidchoice1" name="paid-choice" value="option1" checked>
                <label class="paidchoice1" for="paidchoice1">
                    <h4>Tiền Mặt <i class="fa-solid fa-money-bill-wave"></i></h4>
                    <hr>
                    <h6>Thanh Toán Khi Nhận Hàng</h6>
                </label>
                <br>
                <input type="radio" id="paidchoice2" name="paid-choice" value="option2">
                <label class="paidchoice2" for="paidchoice2">
                    <h4>Ngân Hàng <i class="fa-solid fa-landmark"></i></h4>
                    <hr>
                    <h6>Thanh Toán Trước</h6>
                </label>
            </div>
            <hr>
            <div class="Voucher">
                <input type="text" placeholder="Voucher"></input>
                <hr>
                <div class="Container-Order-detail">
                    <div class="Order-detail">
                        <span>tổng món ăn(1 món):</span>
                        <span class="price">360,000₫</span>
                    </div>

                    <div class="Order-detail">
                        <span>phí ship:</span>
                        <span class="price">15,000₫</span>
                    </div>
                    <hr>
                    <div class="Order-detail">
                        <span>Thành Tiền:</span>
                        <span class="price">375,000₫</span>
                    </div>
                    <div class="buy">
                        <button>
                            MUA
                        </button>
                    </div>
                </div>
            </div>
</body>
