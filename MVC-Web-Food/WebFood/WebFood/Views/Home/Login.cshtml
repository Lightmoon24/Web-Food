<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập / Đăng ký</title>
    <link rel="stylesheet" href="~/Content/CSS/Login.css">
</head>
<body>

    <div class="container" id="form-container">
        <h2 id="form-title">Đăng nhập</h2>

        <!-- FORM ĐĂNG NHẬP -->
        <form id="login-form">
            <input type="text" id="login-username" placeholder="Tên đăng nhập" required />
            <input type="password" id="login-password" placeholder="Mật khẩu" required />
            <button type="submit">Đăng nhập</button>
            <p style="margin-top:10px; font-size:14px;">
                <a id="forgot-password-link">Quên mật khẩu?</a>
            </p>
        </form>
        <!-- CHUYỂN ĐỔI FORM -->
        <div class="toggle">
            <span id="toggle-text">Chưa có tài khoản? <a href="register.html">Đăng ký</a></span>
        </div>

        <!-- THÔNG BÁO -->
        <div class="message-box" id="message-box"></div>
    </div>

    <!-- POPUP QUÊN MẬT KHẨU -->
    <div class="overlay" id="overlay"></div>
    <div class="forgot-box" id="forgot-box">
        <h3>Khôi phục mật khẩu</h3>
        <input type="email" id="forgot-email" placeholder="Nhập email của bạn" required />
        <button id="send-reset">Gửi liên kết</button><br>
        <button id="close-forgot" style="background:#ccc; color:#000;">Đóng</button>
    </div>

    <script>
    </script>
</body>
</html>
